<%- include('layout', { body: `
<div class="auth-container">
    <button class="theme-toggle position-absolute top-0 end-0 m-3 text-white" onclick="toggleTheme()" style="background:rgba(255,255,255,0.1);border-radius:8px;">
        <i class="bi bi-moon-fill" id="theme-icon"></i>
    </button>
    <div class="auth-card">
        <div class="text-center mb-4">
            <h2><i class="bi bi-wallet2 text-primary"></i> OPAM</h2>
            <p class="text-muted">Expense Prediction System</p>
        </div>

        <form method="POST" action="/login">
            <div class="mb-3">
                <label class="form-label">Username or Email</label>
                <input type="text" name="username" class="form-control" required autofocus>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="bi bi-box-arrow-in-right"></i> Sign In
            </button>
        </form>

        <hr>
        
        <p class="text-center mb-0">
            Don't have an account? <a href="/register">Create one</a>
        </p>

        <div class="alert alert-info mt-3 mb-0">
            <small><strong>Demo:</strong> demo / demo123</small>
        </div>
    </div>
</div>
`, title: 'Login', active: '' }) %>
