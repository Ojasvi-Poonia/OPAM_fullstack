<%- include('layout', { body: `
<h2 class="mb-4"><i class="bi bi-shield-exclamation"></i> Fraud Detection</h2>

<div class="alert alert-info mb-4">
    <i class="bi bi-info-circle"></i> 
    Transactions are automatically analyzed for unusual patterns. High-risk transactions are flagged based on spending habits.
</div>

${flaggedTransactions.length > 0 ? `
    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Flagged Transactions (${flaggedTransactions.length})</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Merchant</th>
                            <th>Amount</th>
                            <th>Fraud Score</th>
                            <th>Risk Level</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${flaggedTransactions.map(t => `
                            <tr class="${t.risk_level === 'Critical' ? 'table-danger' : t.risk_level === 'High' ? 'table-warning' : ''}">
                                <td>${new Date(t.date).toLocaleDateString()}</td>
                                <td><span class="badge bg-secondary">${t.category}</span></td>
                                <td>${t.merchant}</td>
                                <td class="fw-bold">â‚¹${t.amount.toLocaleString()}</td>
                                <td>
                                    <div class="progress" style="height: 20px; width: 100px;">
                                        <div class="progress-bar bg-${t.fraud_score > 70 ? 'danger' : 'warning'}" 
                                             style="width: ${t.fraud_score}%">
                                            ${Math.round(t.fraud_score)}%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-${t.risk_level === 'Critical' ? 'danger' : t.risk_level === 'High' ? 'warning' : 'info'} fs-6">
                                        ${t.risk_level}
                                    </span>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-danger">${flaggedTransactions.filter(t => t.risk_level === 'Critical').length}</h3>
                    <p class="text-muted mb-0">Critical Risk</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">${flaggedTransactions.filter(t => t.risk_level === 'High').length}</h3>
                    <p class="text-muted mb-0">High Risk</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">${flaggedTransactions.filter(t => t.risk_level === 'Medium').length}</h3>
                    <p class="text-muted mb-0">Medium Risk</p>
                </div>
            </div>
        </div>
    </div>
` : `
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-shield-check text-success fs-1"></i>
            <h4 class="mt-3">All Clear!</h4>
            <p class="text-muted">No suspicious transactions detected. Your spending patterns look normal.</p>
        </div>
    </div>
`}
`, title: 'Fraud Detection', active: 'fraud' }) %>
